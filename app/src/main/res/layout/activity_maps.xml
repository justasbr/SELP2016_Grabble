<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MapsActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.example.justas.grabble.MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:elevation="16dp"
            app:rippleColor="@android:color/transparent"
            app:srcCompat="@drawable/settings_bw" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/inventory_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:elevation="16dp"
            app:rippleColor="@android:color/transparent"
            app:srcCompat="@drawable/rucksack_color" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/stats_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:elevation="16dp"
            app:rippleColor="@android:color/transparent"
            app:srcCompat="@drawable/amu_bubble_mask" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/leaderboard_button"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:elevation="16dp"
            app:rippleColor="@android:color/transparent"
            app:srcCompat="@drawable/trophy_color"
            android:layout_width="wrap_content" />

    </LinearLayout>

</FrameLayout>