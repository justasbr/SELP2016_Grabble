<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="35dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_player_rucksack"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:elevation="19dp"
            app:srcCompat="@drawable/rucksack_color" />

        <TextView
            android:id="@+id/new_player_inventory_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/new_player_inventory_summary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_player_trophy"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/trophy_color" />

        <TextView
            android:id="@+id/new_player_leaderboard_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/new_player_leaderboard_summary"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_player_stats"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/stats_color" />


        <TextView
            android:id="@+id/new_player_stats_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/new_player_stats_summary"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_player_settings"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/settings_color" />


        <TextView
            android:id="@+id/new_player_settings_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/new_player_settings_summary"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>